{
  "name": "stylisto",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start",
    "dev": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "lint": "expo lint",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "detox test --configuration ios.sim.debug",
    "test:e2e:build": "detox build --configuration ios.sim.debug",
    "test:visual": "jest --testPathPattern=tests/visual",
    "test:performance": "jest --testPathPattern=tests/performance",
    "test:accessibility": "jest --testPathPattern=tests/accessibility",
    "test:ci": "jest --ci --coverage"
  },
  "dependencies": {
    "@amplitude/analytics-browser": "^2.6.0",
    "@amplitude/analytics-react-native": "^1.4.0",
    "@expo-google-fonts/inter": "^0.2.3",
    "@expo/vector-icons": "^14.1.0",
    "@hookform/resolvers": "^3.3.2",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-community/datetimepicker": "^8.4.2",
    "@react-native-community/slider": "4.5.6",
    "@react-native-picker/picker": "^2.11.1",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/elements": "^2.3.8",
    "@react-navigation/native": "^7.1.6",
    "@reduxjs/toolkit": "^2.8.2",
    "@sentry/react-native": "~6.14.0",
    "@supabase/supabase-js": "^2.39.0",
    "@tanstack/react-query": "^5.81.2",
    "@types/uuid": "^10.0.0",
    "axe-core": "^4.8.3",
    "base64-arraybuffer": "^1.0.2",
    "expo": "53.0.12",
    "expo-auth-session": "~6.2.0",
    "expo-blur": "~14.1.5",
    "expo-camera": "~16.1.0",
    "expo-constants": "~17.1.6",
    "expo-crypto": "~14.1.1",
    "expo-device": "~7.1.4",
    "expo-file-system": "^18.1.10",
    "expo-font": "~13.3.1",
    "expo-haptics": "~14.1.4",
    "expo-image": "~2.3.0",
    "expo-image-manipulator": "^13.1.7",
    "expo-image-picker": "~16.1.0",
    "expo-linking": "~7.1.5",
    "expo-network": "~7.1.5",
    "expo-router": "^5.0.0",
    "expo-secure-store": "~14.2.3",
    "expo-splash-screen": "~0.30.9",
    "expo-status-bar": "~2.2.3",
    "expo-symbols": "~0.4.5",
    "expo-system-ui": "~5.0.9",
    "expo-web-browser": "~14.2.0",
    "lru-cache": "^10.2.0",
    "lucide-react-native": "^0.359.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-error-boundary": "^4.0.12",
    "react-hook-form": "^7.48.2",
    "react-native": "0.79.4",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-get-random-values": "^1.11.0",
    "react-native-paper": "^5.14.5",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-svg": "15.11.2",
    "react-native-url-polyfill": "^2.0.0",
    "react-native-web": "~0.20.0",
    "react-native-webview": "13.13.5",
    "react-redux": "^9.2.0",
    "recyclerlistview": "^4.2.0",
    "uuid": "^11.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@sentry/cli": "^2.28.6",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.3",
    "@types/jest": "^29.5.12",
    "@types/react": "~19.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "detox": "^20.18.1",
    "eslint": "^9.25.0",
    "eslint-config-expo": "~9.2.0",
    "jest": "^29.7.0",
    "jest-expo": "~53.0.7",
    "jest-image-snapshot": "^6.4.0",
    "metro-react-native-babel-transformer": "^0.77.0",
    "msw": "^2.2.3",
    "prettier": "^3.6.0",
    "react-native-bundle-visualizer": "^3.1.3",
    "react-native-performance": "^5.1.0",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.1.2",
    "typescript": "~5.8.3"
  },
  "private": true,
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg|@supabase/supabase-js)"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**",
      "!**/.expo/**",
      "!**/babel.config.js",
      "!**/jest.setup.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "detox": {
    "testRunner": "jest",
    "runnerConfig": "e2e/config.json",
    "configurations": {
      "ios.sim.debug": {
        "type": "ios.simulator",
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/Stylisto.app",
        "build": "xcodebuild -workspace ios/Stylisto.xcworkspace -scheme Stylisto -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "device": {
          "type": "iPhone 14"
        }
      },
      "android.emu.debug": {
        "type": "android.emulator",
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
        "device": {
          "avdName": "Pixel_4_API_30"
        }
      }
    }
  }
}
